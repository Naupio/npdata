{erl_opts, [debug_info]}.
{deps, []}.

{dist_node, [
    {setcookie, 'npdata_cookie'},
    {name, 'npdata@127.0.0.1'}
]}.

{relx, [{release, { npdata, "0.0.1" },
         [npdata,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.
